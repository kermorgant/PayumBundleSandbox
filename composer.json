{
    "name": "payum/payum-bundle-sandbox",
    "description": "Symfony2 application to play with PayumBundle.",
    "keywords": [
        "payment",
        "paypal",
        "be2bill",
        "authorize.net",
        "omnipay",
        "paypal express checkout",
        "paypal pro checkout",
        "paypal recurring payment"
    ],
    "license": "MIT",
    "type": "project",
    "autoload": {
        "psr-4": {
            "": "src/"
        },
        "classmap": [
            "app/AppKernel.php",
            "app/AppCache.php"
        ]
    },
    "require": {
        "php": ">=5.5",
        "authorizenet/authorizenet": "^1.8",
        "crevillo/payum-redsys": "^1",
        "doctrine/doctrine-bundle": "~1.4",
        "doctrine/orm": "^2.5",
        "fp/klarna-invoice": "^0.1",
        "incenteev/composer-parameter-handler": "~2.0",
        "klarna/checkout": "^4",
        "jms/payment-paypal-bundle": "^1",
        "omnipay/stripe": "^2",
        "omnipay/paypal": "^2",
        "paypal/rest-api-sdk-php": "^1",
        "payum/omnipay-bridge": "^1",
        "payum/payum-bundle": "^2.1.1",
        "payum/payum": "^1.3.7",
        "payum/jms-payment-bridge": "^1",
        "php-http/guzzle6-adapter": "^1",
        "phpxmlrpc/phpxmlrpc": "^4",
        "sensio/distribution-bundle": "~5",
        "sensio/framework-extra-bundle": "^3",
        "sofort/sofortlib-php": "^3",
        "sonata-project/doctrine-orm-admin-bundle": "^3",
        "stripe/stripe-php": "^3",
        "symfony/assetic-bundle": "^2.8",
        "symfony/monolog-bundle": "^2.8",
        "symfony/symfony": "^2.8",
        "symfony/swiftmailer-bundle": "^2.5",
        "twig/extensions": "^1",
        "defuse/php-encryption": "^2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "sensio/generator-bundle": "~3.0",
        "symfony/phpunit-bridge": "~2.7",
        "phpunit/phpunit": "^5"
    },
    "scripts": {
        "symfony-scripts": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::prepareDeploymentTarget"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        }
    }
}
